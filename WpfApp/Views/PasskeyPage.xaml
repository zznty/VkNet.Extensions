<Page x:Class="WpfApp.Views.PasskeyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfApp.Views"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      d:DataContext="{d:DesignInstance local:PasskeyPage,
                                     IsDesignTimeCreatable=False}"
      mc:Ignorable="d"
      Title="PasskeyPage" Height="450" Width="800">
    <ui:Card HorizontalAlignment="Center" Width="300">
        <ui:SymbolIcon Symbol="Fingerprint48" FontSize="128" Width="300"
                       HorizontalAlignment="Center">
            <ui:SymbolIcon.Foreground>
                <SolidColorBrush Color="{DynamicResource SystemAccentColor}" />
            </ui:SymbolIcon.Foreground>
        </ui:SymbolIcon>
        <ui:Card.Footer>
            <ui:TextBlock TextAlignment="Center"
                       FontTypography="Title"
                       TextWrapping="Wrap">Используйте всплывающее окно</ui:TextBlock>
        </ui:Card.Footer>
    </ui:Card>
</Page>
